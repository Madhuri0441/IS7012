@page
@model RecruitCatLakshmmr.Pages.Companies.CreateModel

@{
    ViewData["Title"] = "Create a new Company";
}

<h4>Create a new Company</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Company.CompanyName" class="control-label"></label>
                <input asp-for="Company.CompanyName" class="form-control" />
                <span asp-validation-for="Company.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.CompanyLocaton" class="control-label"></label>
                <textarea rows="4" asp-for="Company.CompanyLocaton" class="form-control"></textarea>
                <span asp-validation-for="Company.CompanyLocaton" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.CompanyEmailId" class="control-label"></label>
                <input asp-for="Company.CompanyEmailId" class="form-control" />
                <span asp-validation-for="Company.CompanyEmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.CompanyUrl" class="control-label"></label>
                <input asp-for="Company.CompanyUrl" class="form-control" />
                <span asp-validation-for="Company.CompanyUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.PositionName" class="control-label"></label>
                <input asp-for="Company.PositionName" class="form-control" />
                <span asp-validation-for="Company.PositionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.MinSalary" class="control-label"></label>
                <input asp-for="Company.MinSalary" class="form-control" />
                <span asp-validation-for="Company.MinSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.MaxSalary" class="control-label"></label>
                <input asp-for="Company.MaxSalary" class="form-control" />
                <span asp-validation-for="Company.MaxSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.StartDate" class="control-label"></label>
                <input asp-for="Company.StartDate" class="form-control" />
                <span asp-validation-for="Company.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Company.IsPositionAvailable" /> @Html.DisplayNameFor(model => model.Company.IsPositionAvailable)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Company.CompanyStartDate" class="control-label"></label>
                <input asp-for="Company.CompanyStartDate" class="form-control" />
                <span asp-validation-for="Company.CompanyStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.CompanyIndustryId" class="control-label"></label>
                <select asp-for="Company.CompanyIndustryId" class="form-control" asp-items="ViewBag.CompanyIndustryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Company.JobPositionTitleId" class="control-label"></label>
                <select asp-for="Company.JobPositionTitleId" class="form-control" asp-items="ViewBag.JobPositionTitleId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}