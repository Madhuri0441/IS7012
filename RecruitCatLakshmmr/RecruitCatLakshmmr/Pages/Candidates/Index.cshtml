@page
@model RecruitCatLakshmmr.Pages.Candidates.IndexModel

@{
    ViewData["Title"] = "All Candidates";
}

<h1>All Candidates</h1>

<p>
    <a asp-page="Create">Create New Candidate</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].TargetCompany)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Candidate[0].TargetJobTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Candidate)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TargetCompany.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TargetJobTitle.Title)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.CandidateId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.CandidateId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.CandidateId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>