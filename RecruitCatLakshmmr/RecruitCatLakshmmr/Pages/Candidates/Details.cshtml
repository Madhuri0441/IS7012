        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Candidate.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Candidate.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Candidate.TargetCompany)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Candidate.TargetCompany.CompanyName)
