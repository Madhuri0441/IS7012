            @Html.DisplayNameFor(model => model.Candidate.TargetIndustry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Candidate.TargetIndustry.IndustryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Candidate.CandidateId">Edit</a> |
