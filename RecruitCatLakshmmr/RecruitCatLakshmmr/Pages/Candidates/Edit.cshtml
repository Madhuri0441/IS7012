@page
@model RecruitCatLakshmmr.Pages.Candidates.EditModel

@{
    ViewData["Title"] = "Edit Candidate";
}

<h4>Edit @Html.DisplayFor(model => model.Candidate.FullName)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Candidate.CandidateId" />
            <div class="form-group">
                <label asp-for="Candidate.FirstName" class="control-label"></label>
                <input asp-for="Candidate.FirstName" class="form-control" />
                <span asp-validation-for="Candidate.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.LastName" class="control-label"></label>
                <input asp-for="Candidate.LastName" class="form-control" />
                <span asp-validation-for="Candidate.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.TargetSalary" class="control-label"></label>
                <input asp-for="Candidate.TargetSalary" class="form-control" />
                <span asp-validation-for="Candidate.TargetSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.StartDate" class="control-label"></label>
                <input asp-for="Candidate.StartDate" class="form-control" />
                <span asp-validation-for="Candidate.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.YearsOfExperience" class="control-label"></label>
                <input asp-for="Candidate.YearsOfExperience" class="form-control" />
                <span asp-validation-for="Candidate.YearsOfExperience" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.DateOfBirth" class="control-label"></label>
                <input asp-for="Candidate.DateOfBirth" class="form-control" />
                <span asp-validation-for="Candidate.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.EmailId" class="control-label"></label>
                <input asp-for="Candidate.EmailId" class="form-control" />
                <span asp-validation-for="Candidate.EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.Phone" class="control-label"></label>
                <input asp-for="Candidate.Phone" class="form-control" />
                <span asp-validation-for="Candidate.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.TargetCompanyId" class="control-label"></label>
                <select asp-for="Candidate.TargetCompanyId" class="form-control" asp-items="ViewBag.TargetCompanyId"></select>
                <span asp-validation-for="Candidate.TargetCompanyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.TargetJobTitleId" class="control-label"></label>
                <select asp-for="Candidate.TargetJobTitleId" class="form-control" asp-items="ViewBag.TargetJobTitleId"></select>
                <span asp-validation-for="Candidate.TargetJobTitleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Candidate.TargetIndustryId" class="control-label"></label>
                <select asp-for="Candidate.TargetIndustryId" class="form-control" asp-items="ViewBag.TargetIndustryId"></select>
                <span asp-validation-for="Candidate.TargetIndustryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
